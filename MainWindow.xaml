<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="delete">
        <DataGrid x:Name="dataGrid" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="216" Margin="89,92,0,0" VerticalAlignment="Top" Width="448"/>
        <TextBox x:Name="search" HorizontalAlignment="Left" Height="23" Margin="89,47,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="199" TextChanged="search_TextChanged"/>
        <Button x:Name="btn_del" Content="Delete" HorizontalAlignment="Left" Margin="634,236,0,0" VerticalAlignment="Top" Width="75"/>
        <ComboBox x:Name="edit" HorizontalAlignment="Left" Margin="589,92,0,0" VerticalAlignment="Top" Width="120" DropDownClosed="edit_DropDownClosed">
            <ComboBoxItem x:Name="del" Content="Delete"/>
            <ComboBoxItem x:Name="add" Content="Add"/>
            <ComboBoxItem x:Name="upd" Content="Update"/>
        </ComboBox>
        <Label x:Name="test" Content="Label" HorizontalAlignment="Left" Margin="416,47,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
